<project name="domain.testing">

	<path id="testing.classpath">
		<fileset dir="bin/lib/testing/jars" includes="*.jar"/>
		<pathelement location="bin/main"/>
	</path>

	<target name="testing.compile" depends="ivy.retrieve" description="compile src/testing">
		<mkdir dir="bin/testing"/>
		<javac srcdir="src/testing" destdir="bin/testing" classpathref="testing.classpath" debug="true" nowarn="yes" source="1.5" target="1.5" encoding="utf8"/>
	</target>

	<target name="testing.jar" depends="testing.compile" description="create the joist-domain-testing jar">
		<mkdir dir="bin/jars"/>
		<jar destfile="bin/jars/joist-domain-testing.jar">
			<fileset dir="bin/testing" includes="**/*.class"/>
		</jar>
		<mkdir dir="bin/sources"/>
		<zip destfile="bin/sources/joist-domain-testing.jar">
			<fileset dir="src/testing" includes="**/*.java"/>
		</zip>
	</target>

</project>
