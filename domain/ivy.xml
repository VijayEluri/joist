<ivy-module version="2.0">
	<info organisation="joist" module="domain" revision="${joist.version}"/>
	<configurations>
		<conf name="main"/>
		<conf name="sources"/>
		<conf name="testing" extends="main"/>
		<conf name="unit" extends="main" visibility="private"/>
	</configurations>
	<publications>
		<artifact name="joist.domain" type="jar" ext="jar" conf="main"/>
		<artifact name="joist.domain" type="source" ext="jar" conf="sources"/>
		<artifact name="joist.domain-testing" type="jar" ext="jar" conf="testing"/>
		<artifact name="joist.domain-testing" type="source" ext="jar" conf="sources"/>
	</publications>
	<dependencies>
		<dependency org="joist" name="util" rev="${joist.version}" conf="main"/>
		<dependency org="commons-lang" name="commons-lang" rev="2.4" conf="main->*"/>
		<dependency org="timeandmoney" name="timeandmoney" rev="0.5.1" conf="main->default"/>
		<dependency org="junit" name="junit" rev="3.8.2" conf="testing->master,sources"/>
		<!-- Not runtime because we ref both c3p0 and pg classes directly. -->
		<dependency org="c3p0" name="c3p0" rev="0.9.1.2" conf="main->master,sources"/>
		<dependency org="postgresql" name="postgresql" rev="8.3-603.jdbc3" conf="main->master;sources->sources"/>
		<!--
		<dependency org="mysql" name="mysql-connector-java" rev="5.1.10" conf="main->master;sources->sources"/>
		-->
	</dependencies>
</ivy-module>
