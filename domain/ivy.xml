<ivy-module version="2.0">
	<info organisation="joist" module="domain" revision="${joist.version}"/>
	<configurations>
		<conf name="main"/>
		<conf name="db-postgres" description="postgres driver w/source"/>
		<conf name="db-mysql" description="mysql driver w/source"/>
		<conf name="sources" description="joist sources, currently includes the pg/mysql driver sources"/>
		<conf name="testing" extends="main"/>
		<conf name="unit" extends="main" visibility="private"/>
	</configurations>
	<publications>
		<artifact name="joist.domain" type="jar" ext="jar" conf="main"/>
		<artifact name="joist.domain" type="source" ext="jar" conf="sources"/>
		<artifact name="joist.domain-testing" type="jar" ext="jar" conf="testing"/>
		<artifact name="joist.domain-testing" type="source" ext="jar" conf="sources"/>
	</publications>
	<dependencies defaultconfmapping="sources->sources();%->main(default)">
		<dependency org="joist" name="util" rev="${joist.version}" conf="main,sources"/>
		<dependency org="commons-lang" name="commons-lang" rev="2.4" conf="main,sources"/>
		<dependency org="timeandmoney" name="timeandmoney" rev="0.5.1" conf="main,sources"/>

		<dependency org="junit" name="junit" rev="3.8.2" conf="testing,sources"/>

		<dependency org="c3p0" name="c3p0" rev="0.9.1.2" conf="main,sources"/>
		<!-- This is odd, but ibiblio doesn't have sources, so use our own joist driver jars. -->
		<dependency org="joist" name="db-postgres" rev="8.4-701" conf="db-postgres->main;sources"/>
		<dependency org="joist" name="db-mysql" rev="5.1.10" conf="db-mysql->main;sources"/>
	</dependencies>
</ivy-module>
