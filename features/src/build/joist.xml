<project name="features.joist">

	<target name="joist.codegen" description="regenerate the domain codegen classes in src/codegen/" depends="main.compile">
		<java classname="features.cli.Cli" dir="${basedir}" fork="true">
			<classpath>
				<path refid="main.classpath"/>
				<pathelement location="bin/main"/>
			</classpath>
			<arg value="JoistCli.codegen"/>
		</java>
	</target>

	<target name="joist.cycle" depends="main.compile" description="recreate local database">
		<java classname="features.cli.Cli" dir="${basedir}" fork="true">
			<classpath>
				<fileset dir="bin/lib/main/jars" includes="**/*.jar"/>
				<pathelement location="bin/main"/>
			</classpath>
			<arg value="JoistCli.cycle"/>
		</java>
	</target>

</project>

