<ivy-module version="2.0">
	<info organisation="joist" module="joist-features" revision="${joist.version}"/>
	<configurations>
		<conf name="default"/>
		<conf name="unit" extends="default" visibility="private"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="jar" ext="jar" conf="default"/>
	</publications>
	<dependencies defaultconfmapping="%->default,sources()">
		<dependency org="joist" name="joist-domain" rev="${joist.version}" conf="default"/>
		<dependency org="joist" name="joist-migrations" rev="${joist.version}" conf="default"/>
		<dependency org="org.slf4j" name="slf4j-log4j12" rev="1.5.8" conf="default"/>
		<!-- add mysql -->
	</dependencies>
</ivy-module>
