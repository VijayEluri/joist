<ivy-module version="2.0">
	<info organisation="joist" module="util" revision="${joist.version}"/>
	<configurations>
		<conf name="main"/>
		<conf name="unit" extends="main" visibility="private"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact name="joist.util" type="jar" ext="jar" conf="main"/>
		<artifact name="joist.util" type="source" ext="jar" conf="sources"/>
	</publications>
	<dependencies defaultconfmapping="main->main(master),sources;unit->master,sources">
		<dependency org="log4j" name="log4j" rev="1.2.15" conf="main"/>
		<dependency org="junit" name="junit" rev="3.8.2" conf="unit"/>
	</dependencies>
</ivy-module>
