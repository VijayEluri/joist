<project name="common.ivytargets" xmlns:ivy="antlib:org.apache.ivy.ant">
	<property name="ivy.jar.version" value="2.0.0"/>
	<property name="ivy.jar.name" value="ivy-${ivy.jar.version}.jar"/>
	<property name="ivy.home" value="${user.home}/.ivy2"/>
	<available property="ivy.installed" file="${ivy.home}/${ivy.jar.name}"/>

	<property name="jsch.jar.version" value="0.1.29"/>
	<property name="jsch.jar.name" value="jsch-${jsch.jar.version}.jar"/>
	<available property="jsch.installed" file="${ivy.home}/${jsch.jar.name}"/>

	<target name="ivy.install" unless="ivy.installed">
		<mkdir dir="${ivy.home}"/>
		<get src="http://repo1.maven.org/maven2/org/apache/ivy/ivy/${ivy.jar.version}/${ivy.jar.name}" dest="${ivy.home}/${ivy.jar.name}"/>
	</target>

	<target name="jsch.install" unless="jsch.installed">
		<get src="http://repo1.maven.org/maven2/jsch/jsch/${jsch.jar.version}/${jsch.jar.name}" dest="${ivy.home}/${jsch.jar.name}"/>
	</target>

	<target name="ivy.load" depends="ivy.install,jsch.install">
		<taskdef resource="org/apache/ivy/ant/antlib.xml" uri="antlib:org.apache.ivy.ant" classpath="${ivy.home}/${ivy.jar.name};${ivy.home}/${jsch.jar.name}"/>
	</target>

	<target name="ivy.retrieve" depends="ivy.load" description="downloads jars for the project">
		<ivy:resolve/>
		<ivy:retrieve pattern="bin/[conf].lib/[artifact](-[classifier]).[ext]" conf="*" type="jar"/>
	</target>

	<target name="ivy.publish-local" depends="ivy.load" description="publishes the jar/source to your .ivy2/local/ repo">
		<ivy:resolve/>
		<ivy:publish resolver="local" conf="main,source" forcedeliver="true" overwrite="true">
			<artifacts pattern="bin/[type]s/[artifact].[ext]"/>
		</ivy:publish>
	</target>

	<target name="ivy.publish-joist" depends="ivy.load" description="publishes the jar/source to joist.ws">
		<ivy:resolve/>
		<ivy:publish resolver="joist-upload" conf="main,source" status="release" forcedeliver="true">
			<artifacts pattern="bin/[type]s/[artifact].[ext]"/>
		</ivy:publish>
	</target>

	<target name="ivy.update-joist-repo" depends="ivy.load" description="installs all our library dependencies into the joist repo">
		<ivy:resolve/>
		<ivy:install organisation="${ivy.organisation}" module="${ivy.module}" revision="${ivy.revision}" from="default" to="joist" overwrite="true"/>
	</target>
</project>
