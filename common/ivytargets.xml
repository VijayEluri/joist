<project name="common.ivytargets" xmlns:ivy="antlib:org.apache.ivy.ant">

	<import file="ivybootstrap.xml"/>

	<target name="ivy.retrieve" depends="ivy.bootstrap" description="downloads jars for the project">
		<ivy:resolve/>
		<ivy:retrieve pattern="bin/lib/[conf]/[type]s/[artifact].[ext]" conf="*" type="*"/>
	</target>

	<target name="ivy.resolve-make-pom" depends="ivy.bootstrap">
		<ivy:resolve/>
		<ivy:makepom ivyfile="ivy.xml" pomfile="bin/poms/${ivy.module}.pom">
			<mapping conf="default" scope="compile"/>
			<mapping conf="unit" scope="test"/>
			<mapping conf="provided" scope="provided"/>
		</ivy:makepom>
	</target>

	<target name="ivy.publish-local" depends="ivy.bootstrap,ivy.resolve-make-pom" description="publishes the jar/source to your .ivy2/local/ repo">
		<ivy:publish resolver="local" forcedeliver="true" overwrite="true">
			<artifacts pattern="bin/[type]s/[artifact].[ext]"/>
		</ivy:publish>
	</target>

	<target name="ivy.publish-maven-share" depends="ivy.bootstrap" description="publish jar/source to maven repo mounted at ~/repo">
		<ivy:publish status="release" resolver="maven-share" update="true" overwrite="true" forcedeliver="true" publishivy="false">
			<artifacts pattern="bin/[type]s/[artifact].[ext]" />
		</ivy:publish>
	</target>

</project>
